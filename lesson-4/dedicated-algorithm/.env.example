# PostgreSQL settings
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=yourdb

# Batch size for COPY streaming
BATCH_SIZE=50000

# If true, all tables will be truncated before loading data
DELETE_ALL_DATA=false

# Fraction of shared attributes for products in a category (the rest are optional attributes)
COMMON_ATTRIBUTE_RATIO=0.8

# Allowed random variation around COMMON_ATTRIBUTE_RATIO
COMMON_ATTRIBUTE_VARIATION=0.05

# Range of shared attributes for root (top-level) categories
ROOT_SHARED_ATTRIBUTE_RANGE=2,4

# Range of additional attributes for child (sub) categories
CHILD_ADDITIONAL_ATTRIBUTE_RANGE=1,2

# Minimum and maximum number of optional attributes per product
PRODUCT_OPTIONAL_ATTRIBUTE_RANGE=0,10

# Number of attributes considered when selecting optional attributes for a category
CATEGORY_OPTIONAL_POOL_SIZE=8

